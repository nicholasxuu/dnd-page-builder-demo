{
    "meta": {
        "name": "Radio",
        "img": "/img/radio.png"
    },
    "props": {
        "component": "MustacheTemplatedElement",
        "template": "<div class=\"{{#inline}}radio-inline{{/inline}}{{^inline}}radio{{/inline}}{{#disabled}} disabled{{/disabled}}\"><label><input type=\"radio\" id=\"{{id}}\" name=\"{{name}}\" value=\"{{value}}\"{{#checked}} checked{{/checked}}{{#disabled}} disabled{{/disabled}}{{#readOnly}} readOnly{{/readOnly}}>{{label}}</label></div>"
    },
    "options": [
        {
            "field": "id",
            "type": "text",
            "distinct": true,
            "default": ""
        },
        {
            "field": "name",
            "type": "text",
            "default": ""
        },
        {
            "field": "label",
            "type": "text",
            "default": "Radio Button"
        },
        {
            "field": "value",
            "type": "text",
            "default": ""
        },
        {
            "field": "inline",
            "type": "bool",
            "default": false
        },
        {
            "field": "disabled",
            "type": "bool",
            "default": false
        },
        {
            "field": "checked",
            "type": "bool",
            "default": false
        },
        {
            "field": "readOnly",
            "type": "bool",
            "default": false
        }
    ],
    "type": "radio"
}
